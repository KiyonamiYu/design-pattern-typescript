{
  "version": "1.8.0",
  "compilerOptions": {
    "outDir": "build/",
    "lib": ["es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true
  },
  "exclude": ["build", "node_modules"]
}
